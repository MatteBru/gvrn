<div class="ui grid">
  <div class="eight wide column">
  <h2>Showing results for <%= @user.state.name %>'s <%= @user.district.name.to_i.ordinalize %> District</h2>

  <div class="ui segment">
    <h4 class="ui header">Search Again</h4>
    <div class="ui divider"></div>
    <%= form_with url: search_path, method: 'get', class: 'ui form', local: true do |f| %>
      <div class="sixteen wide field">
        <label>Address</label>
        <%= f.text_field :address, class: "ui input", :placeholder => "Address" %>
      </div>
      <div class="fields">
        <div class="eight wide field">
          <label>City</label>
          <%= f.text_field :city, class: "ui input", :placeholder => "City" %>
        </div> 
        <div class="four wide field">
          <label>State</label>
          <div class="ui selection fluid dropdown", id="select">
            <%= f.hidden_field :address_state %>
            <i class="dropdown icon"></i>
            <div class="default text">State</div>
            <div class="menu">
              <% State.all.each do |state| %>
                <div class="item" data-value=<%= state.abbreviation %>><%= state.abbreviation %></div>
              <% end %>
            </div>
          </div>
        </div> 
        <div class="four wide field">
          <label>Zip</label>
          <%= f.text_field :zip_code, class: "ui input", :placeholder => "Zip" %>
        </div> 
      </div>
      <div class="field">
        <%= f.submit "Search", class: "ui blue button" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div class="ui horizontal divider", style="font-size: 1.5rem; margin: 30px 0px">Congresspeople</div>

<div class="ui three column grid">
  <div class="column">
    <div class="ui fluid card">
      <a class="image", href=<%= representative_path(@user.representative) %>>
        <%= image_tag @user.representative.image %>
      </a>
      <div class="content">
        <%= link_to "Rep. #{@user.representative.full_name} — #{@user.representative.party}", representative_path(@user.representative), class: "header" %>
      </div>
      <% if logged_in? %>
        <div class="ui green bottom attached button">
          <i class="call icon"></i>
          Schedule Call
        </div>
      <% else %>
        <%= link_to "Log In to Schedule Call", login_path, class: "ui bottom attached button"%>
      <% end %>
    </div>
  </div>
  <% @user.state.senators.each do |senator| %>
  <div class="column">
    <div class="ui fluid card">
      <a class="image", href=<%= senator_path(senator) %>>
        <%= image_tag senator.image %>
      </a>
      <div class="content">
        <%= link_to "Sen. #{senator.full_name} — #{senator.party}", senator_path(senator), class: "header" %>
      </div>
      <% if logged_in? %>
        <div class="ui green bottom attached button">
          <i class="call icon"></i>
          Schedule Call
        </div>
      <% else %>
        <%= link_to "Log In to Schedule Call", login_path, class: "ui bottom attached button"%>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

