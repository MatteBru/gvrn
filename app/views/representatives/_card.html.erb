<div class="column">
  <div class="ui fluid card">
    <a class="image", href=<%= representative_path(representative) %>>
      <%= image_tag representative.image %>
    </a>
    <div class="content">
      <%= link_to "Rep. #{representative.full_name} â€” #{representative.party}", representative_path(representative), class: "header" %>
    </div>
    <div class="ui bottom attached buttons">
      <button class="ui button schedule" style="width: 24%;"><i class="calendar icon"></i>Schedule</button>
      <div class="or"></div>
      <button class="ui positive button call_rep"><i class="call icon"></i>Call</button>
    </div>
  </div>
</div>

<div class="ui mini modal representative_modal">
  <i class="close icon"></i>
  <div class="content">
    <p style="color: black;">Call Rep <%= representative.full_name %>?<p>
  </div>
  <div class="actions">
    <%= form_with url: appointments_path do |f| %>
    <%= f.hidden_field :congressperson_type, value: "representative" %>
    <%= f.hidden_field :congressperson_id, value: representative.id %>
    <div class="ui black deny button">
      Cancel
    </div>
      <%= f.submit "Let's Do It!", class: "ui positive right button"%>
    <% end %>
  </div>
</div>

<div class="ui tiny modal">
  <i class="close icon"></i>
  <div class="header">
    Schedule Appointment
  </div>
  <div class="content">
    <%= form_with url: appointments_path do |f|%>
      <%= f.hidden_field :delay, value: true %>
      <%= select_day(Time.now) %>
      <%= select_time(Time.now) %>
  </div>
  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
      <%= f.submit "Submit", class: "ui positive right button"%>
    <% end %>
  </div>
</div>
